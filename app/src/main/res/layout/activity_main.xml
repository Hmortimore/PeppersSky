<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/thai_image"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/restaurant"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thai_image"
            android:layout_centerHorizontal="true"
            android:text="Pepper's Sky"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp"
            app:fontFamily="@font/carter_one" />

        <TextView
            android:id="@+id/thai_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:layout_centerHorizontal="true"
            android:text="Thai Food Sensation"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            app:fontFamily="@font/carter_one" />

        <Button
            android:id="@+id/order_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thai_food"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Order online!"
            android:onClick="openURLinBrowser"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/Street_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/phone_number"
            android:layout_centerHorizontal="true"
            android:text="20 Pearl Street \u2022 Cambridge, MA 02139"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            app:fontFamily="@font/lato_bold" />


        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="(617) 492-2541"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/lato_bold"
            android:layout_above="@id/website" />

        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="www.pepper-skys.com"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="5dp"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

